<h1>Posts#show</h1>
<p>Find me in app/views/posts/show.html.erb</p>

<h1><%= @post.title %></h1>
 
 <div class="row">
     <div class="col-md-8">
        <p><%= @post.body %></p>
        <div id="comments">
           
        </div>
     </div>
     <div class="col-md-4">
        <%= link_to "Edit", edit_post_path(@post), class: 'btn btn-success' %>
        <%= button_to "Delete Post", @post, :method => :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this post?'} %>
        <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
     </div>
 </div>