<h1>Advertisements#create</h1>
<p>Find me in app/views/advertisements/create.html.erb</p>

<h1>Create New Ad: </h1><br>

<div class="row">
   <div class="col-md-4">
      
      <p>Guidelines for Ads</p>
      <ul>
         <li>Make sure it rhymes</li>
         <li>Don't use the letter B</li>
         <li>The incessant use of hashtags will get you banned</li>
      </ul>
      
   </div>
   <div class="col-md-8">
      
      <%= form_for @advertisement do |f| %>
         <div class="form-group">
         <%= f.label :title %>
         <%= f.text_field :title, class: 'form-control', placeholder: 'Enter post title' %>
         </div>
          <div class="form-group">
         <%= f.label :price %>
         <%= f.text_field :price, class: 'form-control', placeholder: 'Enter Price' %>
         </div>
         <div class="form-group">
            
         <%= f.label :body %>
         <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter Post Body" %>
         
         </div>
         
         <div class="form-group">
            <%= f.submit "Save", class: 'btn btn-success'%>   
         </div>
         
      <% end %>
      
   </div>
</div>