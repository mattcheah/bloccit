<%= form_for topic do |f| %>

         <% if topic.errors.any? %>
            <div class="alert alert-danger">
               <h4><%= pluralize(topic.errors.count, "error") %></h4>
               <ul>
                  <% topic.errors.full_messages.each do |m| %>
                     <li><%= m %></li>
                  <% end %>
               </ul>
            </div>
         <% end %>
         
         <%= form_group_tag(topic.errors[:title]) do %>
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control", placeholder: "Enter your topic name" %>
         <% end %>
         
         <%= form_group_tag(topic.errors[:description]) do %>
            <%= f.label :description %>
            <%= f.text_area :description, class: "form-control", placeholder: "Enter your description here" %>
         <% end %>
         
         <%= form_group_tag(topic.errors[:public]) do %>
               <%= f.label :public, class: 'checkbox' do %>
               <%= f.check_box :public %> Public Topic
               <% end %>
         <% end %>
       
         <div>
            <%= f.submit "Save", class: "btn btn-success" %>
         </div>
         
<% end %>
